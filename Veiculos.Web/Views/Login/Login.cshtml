@model Veiculos.Web.Models.LoginViewModel
@{
    Layout= "/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <center>
        <div class="cabecalho-login">
            <img src="/images/icone.png">
            <h1 class="text-bold"> Veiculos na Web</h1>
        <div>  
    </center>
    <form action="/Login/Login" method="post">
                        <div class="form-group">
                            <input type="email" class="form-control" value="@Model.Email" name="Email" placeholder="Informe seu email">  
                        </div>
                        <div class="form-group">                 
                        <input type="password" class="form-control" value="@Model.Senha" name="Senha" placeholder="Informe sua senha">
                         </div>
                        @if(ViewBag.LoginMensagemErro != null)
                        {
                            <div class="form-group "> 
                                 <p class="text-center text-red text-bold">@ViewData["LoginMensagemErro"]</p>
                            </div>    
                        }    
                        <hr/>
                        <div class="form-group">  

                            <button class="btn btn-primary btn-100">Entrar</button>
                        </div>     
                        
    </form>



