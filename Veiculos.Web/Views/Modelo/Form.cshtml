@model Veiculos.Web.Models.CadastroViewModel
@{
    Layout="/Views/Shared/_LayoutTelaCadastro.cshtml";
    
}


@{
    var _dados = (Veiculos.Dominio.Entidades.Modelo)Model.Dados;

    <input class="hidden" name="Id" value="@_dados.Id"/>

    <div class="form-group">
        <label>Nome</label>
        <input class="form-control" name="Nome" value="@_dados.Nome"/>
        <label id="erroNome" class="hidden text-red">Informe o nome</label>
    </div>

    <div class="form-group">
        <label>Marca</label>
        <select id="select_marca" class="form-control" name="IdMarca" value="@_dados.IdMarca" >

        </select>
        <label id="erroIdMarca" class="hidden text-red">Informe a marca</label>
    </div>


}

